<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_splash_screen">
    <fragment
        android:id="@+id/nav_splash_screen"
        android:name="com.devanshusuthar.uniguide.SplashScreenFragment"
        android:label="activity_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_nav_splash_screen_to_nav_login"
            app:destination="@id/nav_login" />
    </fragment>
    <fragment
        android:id="@+id/nav_login"
        android:name="com.devanshusuthar.uniguide.LoginPage"
        android:label="fragment_login_page"
        tools:layout="@layout/fragment_login_page" />
</navigation>